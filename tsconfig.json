{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.intl",
      "esnext.symbol"
    ],
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
  },
  "exclude": [
    "tests",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}